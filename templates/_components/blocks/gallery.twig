<div class="">
    {% if block.galleryTitle is defined or block.galleryDescription is defined %}
        <div class="container mx-auto px-4 py-4">
            <h2 class="text-3xl">{{ block.galleryTitle }}</h2>
            <div class="mb-4 w-3/4">{{ block.galleryDescription|nl2br }}</div>
        </div>
    {% endif %}
    <slick
            ref="slick"
            class="flex items-center"
            :options="slickGalleryOptions" >
        {% for item in block.gallery %}
            <a href="{{ item.itemLink.url }}" class="no-underline group relative h-full">
                <picture class="block w-full h-full contain">
                    <img src="{{ item.itemImage[0].url }}" alt="{{ item.itemImage[0].title }}" class="w-full h-full p-4">
                </picture>
            </a>
        {% endfor %}
    </slick>
</div>



